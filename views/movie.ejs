<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= sanitizer(title) %> | MovieFlix</title>
    <link rel="stylesheet" href="/css/sidebar.css">
    <link
      href="https://fonts.googleapis.com/css2?family=Ranchers&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/movie.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link rel="stylesheet" href="https://cdn.plyr.io/3.6.3/plyr.css" />
  </head>
  <body>
    <div class="bg-image"></div>
    <div class="wrapper">
      <%- include("partials/nav-bar.ejs") %>
      <main class="container">
        <%- include("partials/sidebar.ejs") %>
        <!-- Do Not Edit Below Block By Javascript, Let it Handle By Plyr else it will break -->
        <section id="movie-container">
          <div id="main-title"><%= sanitizer(title) %></div>
          <div class="video-container hover-effect">
            <video preload="metadata" id="player" playsinline crossorigin controls data-poster="">
              <source src="<%= sourceLink %>" />
            </video>
          </div>
          <% if(Object.keys(episodes).length>1) { %>
          <section id="episode-header">
            <span>Episodes</span>
            <div class="fa fa-plus" id="plus"></div>
          </section>
          <section id="ep-list">

           <% Object.values(episodes).forEach((link,i) => { %>
            
            <a href="<%= link %>" class="episode-button">
              <span class="ep">Ep </span><span class="ep-num"><%= i+1 %></span>
            </a>
            <% }) %> 
          </section>

          <% } %>
          <section id="describe">
            <span>Description</span>
            <div class="fa fa-angle-down" id="arrow"></div>
          </section>
          <section id="details"></section>
          <div class="players">
            <a class="player" id="vlc" href="vlc://<%= sourceLink.split("https://cors.maplehacks.ml/")[1] %>">
              <span>Play With VLC</span>
              <img src="https://cdn.jsdelivr.net/gh/Aicirou/goindex-theme-acrou@v2.0.8/dist/images/player/vlc.png" alt="">
            </a>
              <a class="player" id="mx" href="intent:<%= sourceLink.split("https://cors.maplehacks.ml/")[1] %>#Intent;package=com.mxtech.videoplayer.ad;S.title=undefined;end">
              <span>Play With MX Player</span>
              <img src="https://cdn.jsdelivr.net/gh/Aicirou/goindex-theme-acrou@v2.0.8/dist/images/player/mxplayer.png" alt="">
            </a>
          </div>
        </section>
        <section id="side-bar">
          <div id="side-title">
            <p>Related Movies</p>
          </div>
          <div class="related">
            <div id="related-movies">
              <% sideLinks.forEach((e,i)=>{ %>
              <div class="related-movie-container animate-bottom">
                <a href="<%= e.link %>" class="movie-link">
                  <div class="related-poster">
                    <img src="<%= e.poster %>" alt="" class="rel-poster" />
                  </div>
                  <div class="related-movie-description">
                    <div class="movie-name">
                      <span
                        ><%= sanitizer(e.title) %></span
                      >
                    </div>
                  </div>
                </a>
              </div>
              <% }) %>
            </div>
          </div>
        </section>
      </main>
      <%- include("partials/footer.ejs") %>
    </div>
    <script src="https://cdn.rawgit.com/video-dev/hls.js/18bb552/dist/hls.min.js"></script>
    <script src="https://cdn.plyr.io/3.6.3/plyr.js"></script>
    <script src="/js/movie.js"></script>
  </body>
</html>
